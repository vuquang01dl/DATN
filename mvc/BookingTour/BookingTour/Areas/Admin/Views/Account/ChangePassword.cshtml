@model Application.DTOs.AccountDTOs.ChangePasswordViewModel

<h2>Đổi mật khẩu</h2>
<form asp-action="ChangePassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="userId" type="hidden" value="@Model.userId">
    <div class="form-group">
        <div class="input-icon">
            <span class="input-icon-addon">
                <i class="fas fa-key"></i>
            </span>
            <input type="password"
                   class="form-control"
                   placeholder="Password"
                   asp-for="Password"
                   id="Password" name="Password" />
            <span class="input-icon-addon toggle-password" data-target="#Password">
                <i class="fas fa-eye"></i>
            </span>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-icon">
            <span class="input-icon-addon">
                <i class="fas fa-key"></i>
            </span>
            <input type="password"
                   class="form-control"
                   placeholder="ConfirmPassword"
                   asp-for="ConfirmPassword"
                   id="ConfirmPassword" name="ConfirmPassword" />
            <span class="input-icon-addon toggle-password" data-target="#ConfirmPassword">
                <i class="fas fa-eye"></i>
            </span>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>