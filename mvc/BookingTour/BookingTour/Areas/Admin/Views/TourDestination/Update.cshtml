@model Application.DTOs.TourDestinationDTOs.TourDestinationUpdateViewModel
@{
    ViewData["Title"] = "Chỉnh sửa thông tin thời gian địa điểm tour";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Sửa Thông Tin Địa Điểm</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-area="Admin"
               asp-controller="Home"
               asp-action="Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-home">
            <a asp-area="Admin"
               asp-controller="Tour"
               asp-action="Index">
                Tours
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-home">
            <a asp-area="Admin"
               asp-controller="TourDestination"
               asp-route-TourID="@Model.TourID"
               asp-action="Index">
                @Model.TourID
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item ">
            <a asp-area="Admin"
               asp-controller="TourDestination"
               asp-route-TourID="@Model.TourID"
               asp-route-DestinatonID =" @Model.DestinationID"
               asp-action="Update">
                @Model.DestinationID
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item active">
            Destinaton Update
        </li>
    </ul>
</div>

<form asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="TourID" type="hidden" value="@Model.TourID">
    <input asp-for="DestinationID" type="hidden" value="@Model.DestinationID">

    <div class="form-group">
        <label asp-for="VisitDate"></label>
        <input asp-for="VisitDate" type="datetime-local" class="form-control" id="VisitDate" name="VisitDate" value="@Model.VisitDate.ToString("yyyy-MM-ddTHH:mm")" Required>
        <span asp-validation-for="VisitDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-area="Admin" asp-controller="TourDestination" asp-action="Index" asp-route-TourID="@Model.TourID" class="btn btn-secondary">Hủy</a>
</form>
