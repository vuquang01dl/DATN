@model Presentation.Models.EmployeeViewModel
@{
    ViewData["Title"] = "Cập nhật thông tin cá nhân";
    Layout = "_ecomLayout";
}
<div class="services_section layout_padding">
    <div class="container">
<div class="page-header">
    <h3 class="font-weight-bold mb-3">Thông Tin Nhân Viên</h3>
    <ul class="breadcrumb mb-3">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Employee" asp-action="ViewProfile" asp-route-UserID="@Model.EmployeeID">Profile</a>
        </li>
                <li class="breadcrumb-item" active>
            <span class="text-secondary">@Model.Email</span>
        </li>
    </ul>
</div>

        <form asp-action="ViewProfile" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="EmployeeID" type="hidden" class="form-control" id="EmployeeID" name="EmployeeID" value="@Model.EmployeeID">

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" type="text" class="form-control" id="FirstName" name="FirstName" required>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" type="text" class="form-control" id="LastName" name="LastName" required>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" type="text" class="form-control" id="Address" name="Address" required>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" type="text" class="form-control" readonly />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" type="text" class="form-control" required>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="text" class="form-control" readonly>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
</div>
</div>